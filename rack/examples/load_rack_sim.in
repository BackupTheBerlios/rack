prefix=@prefix@
exec_prefix=@exec_prefix@
BINDIR=@bindir@
LIBDIR=@libdir@
PKGDATADIR=@datarootdir@/rack

CURR_PATH=`pwd`

cd $BINDIR

export LD_LIBRARY_PATH=$LIBDIR:$LD_LIBRARY_PATH

./ChassisSim \
    --instance 0 \
    --cmdTaskPrio 30 \
    --dataTaskPrio 29 &

sleep 0.5

./OdometryChassis \
    --instance 0 \
    --cmdTaskPrio 20 \
    --dataTaskPrio 19 &

sleep 0.5

./Scan2dSim \
    --instance 0 \
    --odometryInst 0 \
    --maxRange=10000 \
    --cmdTaskPrio 20 \
    --dataTaskPrio 19 \
    --mapFile $PKGDATADIR/rack_example.dxf &

sleep 0.5

./Position \
    --instance 0 \
    --cmdTaskPrio 20 \
    --dataTaskPrio 19 &

sleep 0.5

./PilotJoystick \
    --instance 0 \
    --scan2dInst=0 \
    --maxSpeed=1000 \
    --mode=1 \
    --cmdTaskPrio 30 \
    --dataTaskPrio 29 &

sleep 0.5

./PilotWallFollowing \
    --instance 1 \
    --scan2dInst=0 \
    --maxSpeed=1000 \
    --cmdTaskPrio 30 \
    --dataTaskPrio 29 &

sleep 0.5

cd $CURR_PATH

