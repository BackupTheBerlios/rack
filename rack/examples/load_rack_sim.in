prefix=@prefix@
exec_prefix=@exec_prefix@
BINDIR=@bindir@
DATAROOTDIR=@datarootdir@
LIBDIR=@libdir@
PKGLIBDIR=@libdir@/rack
PKGDATADIR=@datarootdir@/rack

CURR_PATH=`pwd`

cd $BINDIR

# RACK real-time applications

export LD_LIBRARY_PATH=$LIBDIR:$LD_LIBRARY_PATH

./ChassisSim \
    --instance 0 \
    --cmdTaskPrio 30 \
    --dataTaskPrio 29 &

./OdometryChassis \
    --instance 0 \
    --cmdTaskPrio 20 \
    --dataTaskPrio 19 &

./Scan2dSim \
    --instance 0 \
    --odometryInst 0 \
    --maxRange=10000 \
    --cmdTaskPrio 20 \
    --dataTaskPrio 19 \
    --mapFile $PKGDATADIR/rack_example.dxf &

./Position \
    --instance 0 \
    --cmdTaskPrio 20 \
    --dataTaskPrio 19 &

./PilotJoystick \
    --instance 0 \
    --scan2dInst=0 \
    --maxSpeed=1000 \
    --mode=1 \
    --cmdTaskPrio 30 \
    --dataTaskPrio 29 &

./PilotWallFollowing \
    --instance 1 \
    --scan2dInst=0 \
    --maxSpeed=1000 \
    --cmdTaskPrio 30 \
    --dataTaskPrio 29 &

cd $CURR_PATH

sleep 3
echo -n "Press ENTER to terminate"
read DUMMY

killall PilotWallFollowing PilotJoystick Scan2dSim Position OdometryChassis ChassisSim

